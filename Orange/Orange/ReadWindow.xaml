<Window x:Class="Orange.ReadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reading Mode" Height="419.163" Width="411.847" Loaded="Window_Loaded"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderThickness="1" BorderBrush="Gray">
                <Image x:Name="preImage" />
            </Border>
            <StackPanel Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Text Size:"/>
                    <Label Content="Undefind" x:Name="textSizeLabel"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Base:"/>
                    <Label Content="Undefind" x:Name="baseLabel"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <TextBox x:Name="infoTextBox" Grid.Row="1" IsReadOnly="True"/>
    </Grid>
</Window>
